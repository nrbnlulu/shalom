        {%- elif arg_value.value_kind == "List" -%}
[
            {%- for item in arg_value.items -%}
{{ serialize_argument_value(item) }}{{", " if not loop.last}}
            {%- endfor -%}
]
        {%- elif arg_value.value_kind == "Scalar" -%}
{{arg_value.value}}
        {%- elif arg_value.value_kind == "Enum" -%}
{{arg_value.value}}
        {%- endif -%}
    {%- endif -%}
