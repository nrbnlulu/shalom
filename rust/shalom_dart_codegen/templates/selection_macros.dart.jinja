            {% if is_root_selection -%}
                final String this$normalizedID = "ROOT_{{OP_TYPE}}";
                final this$NormalizedRecord = ctx.getOrCreateCachedObjectRecord("ROOT_{{OP_TYPE}}");
            {% else %}
